<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= "Soru"+":"+ answer.pin.description %></td>
        <td><%=image_tag answer.image.url(:medium) %></td>
        <td><%= answer.description %></td>
        <td><%= answer.pin_id %></td>
        <td><%= answer.pin %></td>
        <td><%= answer.doctor.name %></td>

        <% if answer.doctor == current_doctor %>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


