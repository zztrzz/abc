 
<div class="panel panel-default kayit">

<div class="panel panel-heading">

<h2>Hasta Kayıt</h2>

</div>

<div class="panel-body">

  <div class="col-md-4">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


<div class= "form-group">

  <div><%= f.label "isim" %><br />
  <%= f.text_field :name  %></div></div>

 <div class= "form-group">
  <%= f.label "Resim" %><br />
  <%= f.file_field :image  %></div>

<div class= "form-group">
  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div></div>

 
<div class= "form-group">
  <div><%= f.label "Şifre" %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

 
<div class= "form-group">
  <div><%= f.label "Şifre tekrar" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div></div>
 

<div class= "form-group">
  <div><%= f.submit "Kayıt Ol" %></div>
<% end %></div>

</div>

<div class="panel-footer">
  <%= link_to("Doktorsanız buraya tıklayın", new_doctor_registration_path) %>
</div>

 </div>

 

 </div>
 

 
