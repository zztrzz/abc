
<div class="panel panel-default">

<div class="panel panel-heading">

<h3 class="panel-title">HASTA KAYIT FORMU  </h3>

</div>

<div class="panel-body">

  <div class="col-md-6">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


<div class= "form-group">

  <div><%= f.label "isim" %><br />
  <%= f.text_field :firstname  %></div></div>


<div class= "form-group">
  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div></div>

 
<div class= "form-group">
  <div><%= f.label "Şifre" %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

 
<div class= "form-group">
  <div><%= f.label "Şifre tekrar" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div></div>
 

<div class= "form-group">
  <div><%= f.submit "Kayıt Ol" %></div>
<% end %></div>

</div>

<div class="panel-footer">
  <%= link_to("Doktorsanız buraya tıklayın", new_doctor_registration_path) %>
</div>

 </div>

 <div class="col-md-6">
 <%= image_tag(url='http://www.wilcare.org/img/patient.jpg') %>
</div>


 </div>
 


 

