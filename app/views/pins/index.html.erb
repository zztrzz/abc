<% link_to "Soru Sor", new_pin_path %>
<%end%>

<% unless (user_signed_in? or doctor_signed_in?) %>

<div class="jumbotron">
  <div class="container">
  <h1>Sağlığınıza yeni bir bakış</h1>
  <p>Sadece bir değil birden fazlasından görüş almak hayatınızı kurtarır. </p>
  <p><a class="btn btn-primary btn-lg" role="button">Üye Ol</a></p>
</div></div>
<%end%>


  <div id="pins" class="transitions-enabled">
    <% @pins.each do |pin| %>
      <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin if pin.image_file_name %>

        <div class="panel-body">
         <%= pin.description %> 
          <br>
           <strong><%= pin.user.firstname if pin.user.firstname %></strong>

          <% if pin.user == current_user %>
           <div class="actions">
            <%= link_to 'Show', pin %> 
            <%= link_to 'Edit', edit_pin_path(pin) %> 
            <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %> 
          </div>

          <%elsif doctor_signed_in? %>
            <div class="actions">
            <%= link_to 'Answer',pin_path(pin) %> 
            </div>


           <% end %>
       </div>
      </div>
  <%end%>
 <div class="center">
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>

 
</div>
 